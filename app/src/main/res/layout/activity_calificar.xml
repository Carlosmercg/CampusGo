<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@color/white">

    <!-- Título -->
    <TextView
        android:id="@+id/textView6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="¡Califica tu experiencia!"
        android:textColor="@color/gray_dark"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Subtítulo -->
    <TextView
        android:id="@+id/textView7"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Ten en cuenta el tiempo de llegada, la calidad del producto y su precio"
        android:textColor="@color/gray"
        android:textSize="16sp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/textView6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Avatar redondo -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView1"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="60dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/textView7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/imageView15"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/placeholder_usuario"
            android:scaleType="centerCrop"/>
    </androidx.cardview.widget.CardView>

    <!-- Nombre -->
    <TextView
        android:id="@+id/textView8"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="María Victoria Muñoz Santos"
        android:textColor="@color/gray_dark"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/cardView1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Universidad -->
    <TextView
        android:id="@+id/textView9"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Universidad de los Andes"
        android:textColor="@color/gray"
        android:textSize="14sp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/textView8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Estrellas (horizontal chain) -->
    <ImageButton
        android:id="@+id/btncal1"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@null"
        android:src="@drawable/estrella"
        android:contentDescription="Estrella 1"
        app:layout_constraintTop_toBottomOf="@id/textView9"
        app:layout_constraintTop_margin="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btncal2"
        app:layout_constraintHorizontal_chainStyle="spread"/>

    <ImageButton
        android:id="@+id/btncal2"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:background="@null"
        android:src="@drawable/estrella"
        android:contentDescription="Estrella 2"
        app:layout_constraintTop_toTopOf="@id/btncal1"
        app:layout_constraintStart_toEndOf="@id/btncal1"
        app:layout_constraintEnd_toStartOf="@+id/btncal3"/>

    <ImageButton
        android:id="@+id/btncal3"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:background="@null"
        android:src="@drawable/estrella"
        android:contentDescription="Estrella 3"
        app:layout_constraintTop_toTopOf="@id/btncal1"
        app:layout_constraintStart_toEndOf="@id/btncal2"
        app:layout_constraintEnd_toStartOf="@+id/btncal4"/>

    <ImageButton
        android:id="@+id/btncal4"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:background="@null"
        android:src="@drawable/estrella"
        android:contentDescription="Estrella 4"
        app:layout_constraintTop_toTopOf="@id/btncal1"
        app:layout_constraintStart_toEndOf="@id/btncal3"
        app:layout_constraintEnd_toStartOf="@+id/btncal5"/>

    <ImageButton
        android:id="@+id/btncal5"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:background="@null"
        android:src="@drawable/estrella"
        android:contentDescription="Estrella 5"
        app:layout_constraintTop_toTopOf="@id/btncal1"
        app:layout_constraintStart_toEndOf="@id/btncal4"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/button"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="32dp"
        android:text="¡Gracias por tu colaboración!"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/primary"
        app:layout_constraintTop_toBottomOf="@id/btncal1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
