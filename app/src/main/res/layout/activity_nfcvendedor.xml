<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/flRaizNfc"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context=".compra.NFCActivity_Vendedor">

    <!-- Imagen de fondo con baja opacidad -->
    <ImageView
        android:id="@+id/imgFondoNfc"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/nfc"
        android:scaleType="centerCrop"
        android:alpha="0.1" />

    <!-- Contenedor de contenido centrado -->
    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp">

        <!-- Título grande -->
        <TextView
            android:id="@+id/tvTituloNfc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¡Haz llegado a tu destino!"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center" />

        <!-- Subtítulo explicativo -->
        <TextView
            android:id="@+id/tvSubtituloNfc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Utiliza la parte de atrás de tu teléfono para confirmar que entregaste tu(s) producto(s)"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:gravity="center" />

        <!-- Icono central de sincronización / NFC -->
        <ImageView
            android:id="@+id/imgIconoNfc"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="32dp"
            android:src="@drawable/ic_sync"
            />

        <!-- Texto de espera -->
        <TextView
            android:id="@+id/tvEsperando"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Esperando contacto…"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:gravity="center" />

    </LinearLayout>
</FrameLayout>
